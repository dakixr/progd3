---
// This is a routing file for internationalization
// It simply imports and uses the main job detail page component
import JobDetailPage from '@/components/pages/JobDetailPage.astro';
import { jobs } from "@/data/jobs";

// Define getStaticPaths to generate all job detail pages at build time
export function getStaticPaths() {
  return jobs.map(job => ({
    params: { id: job.id },
    props: { job },
  }));
}

// Get the job from props (passed by getStaticPaths)
const { job } = Astro.props;
---

<JobDetailPage job={job} /> 